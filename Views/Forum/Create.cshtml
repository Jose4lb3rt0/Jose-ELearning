@model int

@{
    ViewData["Title"] = "Crear Nuevo Post";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Crear Nuevo Post</h1>

    <form asp-action="Create" method="post">
        <input type="hidden" name="cursoId" value="@Model" />

        <div class="form-group mb-3">
            <label for="titulo" class="form-label">Título</label>
            <input type="text" name="titulo" id="titulo" class="form-control"
                   placeholder="Escribe el título del post" required>
        </div>

        <div class="form-group mb-3">
            <label for="contenido" class="form-label">Contenido</label>
            <textarea name="contenido" id="contenido" class="form-control" rows="5"
                      placeholder="Escribe el contenido del post" required></textarea>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" asp-route-cursoId="@Model" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane"></i> Publicar
            </button>
        </div>
    </form>
</div>
